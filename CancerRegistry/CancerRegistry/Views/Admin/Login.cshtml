@model CancerRegistry.Models.Admin.AdminLoginModel;
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="UTF-8">
    <title>Админ Логин</title>
  
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:600'><link rel="stylesheet" href="~/css/style.css">

</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

 
<section class="preloader">
    <div class="spinner">

        <span class="spinner-rotate"></span>
			  
    </div>
</section>


<div class="login-wrap">
    <a href="index.html"><img src="~/images/logo_transparent.png" p></a>

    <div class="login-html">

        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Admin Login</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
        <div class="login-form">
            <div class="sign-in-htm">
                <div class="group">
					
                </div>
                <form asp-controller="Admin" asp-action="Login" method="post">
                    <div class="group">
                        <label asp-for="UserName" class="label">Username</label>
                        <input asp-for="UserName" type="text" class="input">
                    </div>
                    <div class="group">
                        <label asp-for="Password" class="label">Password</label>
                        <input asp-for="Password" type="password" class="input" data-type="password">
                    </div>
                    <div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                    </div>
                    <div class="group">
                        <button class="button" type ="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
</div>
</body>
</html>